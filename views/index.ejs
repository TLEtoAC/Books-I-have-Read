<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Book List</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4 text-center">Books I've Read</h1>

    <% if (books.length === 0) { %>
      <p class="text-center">No books added yet!</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% books.forEach(book => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <img src="<%= book.url %>" class="card-img-top bg-white" alt="Cover" style="height: 300px; object-fit: contain; padding: 10px;">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.summary %></p>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/edit/<%= book.id %>" class="btn btn-sm btn-primary">Edit</a>
                <form action="/delete/<%= book.id %>" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div class="text-center mt-4">
      <a href="/new" class="btn btn-success">Add New Book</a>
    </div>
  </div>
</body>
</html>
